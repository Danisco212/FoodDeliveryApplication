<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/food_image"
                android:src="@drawable/ic_search"/>

            <TextView
                android:layout_below="@id/food_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food name"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/food_name"/>
            <TextView
                android:layout_below="@id/food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="from Restaurant name"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:id="@+id/food_restaurant"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_below="@id/food_restaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$12.99"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/food_price"/>
            <TextView
                android:layout_below="@id/food_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="per piece"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:id="@+id/food_serving"/>



        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>